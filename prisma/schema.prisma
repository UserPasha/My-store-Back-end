generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product{
id Int @id @default(autoincrement())



name String
slug String
description String
price Int
reviews Review[]
images String[]
}

model Review{
id Int @id @default(autoincrement())



product Product @relation(fields: [productId], references: [id])

productId Int
text String
rating Int
}